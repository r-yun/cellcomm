<div id = "account-form">
<%= form_for(@user, :url => user_edit_path, :method => "post", :remote => true) do |f| %>
  <%= f.label(:first_name) %>
  <%= f.text_field(:first_name) %>
  <%= f.label(:last_name) %>
  <%= f.text_field(:last_name) %>
  <%= f.label(:email) %>
  <%= f.text_field(:email) %>
  <%= f.fields_for(:address, @address)  do |a| %>
    <%= a.label(:address) %>
    <%= a.text_field(:address) %>
    <%= a.label(:city) %>
    <%= a.text_field(:city) %>
    <%= a.label(:province) %>
    <%= a.text_field(:province) %>
    <%= a.label(:country) %>
    <%= a.text_field(:country) %>
    <%= a.label(:postal_code) %>
    <%= a.text_field(:postal_code) %>
  <% end %>

<%= f.submit("Submit") %>
<% end %>
</div>



<div id = "account-info">
<%= render :partial => "user_info.html.erb"%>
</div>

