<%= stylesheet_link_tag("user_user_page", :media => "all") %>
<div class = "user-page">
  <div class="user-page-title">
    User Page
  </div>
  <hr>
  <div id = "account-info">
    <%= render :partial => "user_info.html.erb"%>
  </div>
  <div id = "account-form">
    <%= form_for(@user_edit, :url => user_edit_path, :method => "post", :remote => true) do |f| %>
      <%= f.label(:first_name) %>
      <%= f.text_field(:first_name) %>
      <%= f.label(:last_name) %>
      <%= f.text_field(:last_name) %>
      <%= f.label(:email) %>
      <%= f.text_field(:email) %>
      <%= f.label(:address) %>
      <%= f.text_field(:address) %>
      <%= f.label(:city) %>
      <%= f.text_field(:city) %>
      <%= f.label(:province) %>
      <%= f.text_field(:province) %>
      <%= f.label(:country) %>
      <%= f.text_field(:country) %>
      <%= f.label(:postal_code) %>
      <%= f.text_field(:postal_code) %>
    <%= f.submit("Submit") %>
    <% end %> <!-- form_for -->
  </div>

  <% if @user.orders.present? %>
    <%= render :partial => "orders.html.erb" %>
  <% end %>

</div>
