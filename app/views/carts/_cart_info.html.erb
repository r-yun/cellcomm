<% if @user.cart.cart_items.present? %>
  <div class = "cart-info">
    <div class="order-info-title">Order Info </div>
    <div class = "order-info">
      <div class="order-info-headings">
        <div>
          Subtotal:
        </div>
        <div>
          Tax:
        </div>
        <div>
          Shipping & Handling:
        </div>
        <div>
          Total:
        </div>
      </div>

      <div class="order-info-attributes">
        <div>
          <% cache([@user, @subtotal]) do %>
          $<%= number_with_precision(@subtotal, :precision => 2) %>
          <% end %>
        </div>

        <div>
          <% cache([@user,@tax_total]) do %>
          $<%= number_with_precision(@tax_total, :precision => 2) %>
          <% end %>
        </div>

        <div>
          Free
        </div>

        <div>
          <% cache([@user,@total]) do %>
          $<%= number_with_precision(@total, :precision => 2) %>
          <% end %>
        </div> <!-- .order-info-attributes div -->

      </div>  <!-- .order-info-attributes -->
    </div>  <!-- .order-info -->
  </div>  <!-- .cart-info -->
<% end %>
